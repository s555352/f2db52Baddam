extends layout

block content
  h1= title
  - var result = results 
  div.container-fluid
     div.row
        each item,index in result
            div.col-sm-2(onclick=`buy(${index})`) birdName: #{item["birdName"]}  <br>  birdWeight: #{item["birdWeight"]} <br> birdColor: #{item["birdColor"]} 
  script.
      function buy(index){
         alert("you purchased item "+(index+1))
      }